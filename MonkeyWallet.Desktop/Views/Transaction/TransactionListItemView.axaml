<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MonkeyWallet.Desktop.Views.Transaction.TransactionListItemView">
    <StackPanel>
        <Border CornerRadius="10" ClipToBounds="True">
            <Panel Background="#7FFF22DD">
            </Panel>
        </Border>
        <UniformGrid  Columns="4" Rows="1" >
            <TextBlock Text="{Binding TxHash, StringFormat='Tx Hash {0}'}"/>
            <TextBlock Text="{Binding EpochNo, StringFormat='EpochNo {0}'}"/>
            <TextBlock Text="{Binding BlockHeight, StringFormat='BlockHeight {0}'}"/>
            <TextBlock Text="{Binding BlockTime, StringFormat='BlockTime {0}'}"/>
        </UniformGrid>
        
    </StackPanel>
</UserControl>
